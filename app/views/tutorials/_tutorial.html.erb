<div class="tutorial-preview">
  <div class="info">
    <%= t('common.created_by')%> <%= link_to tutorial.user.username, user_path(tutorial.user) %>
    <%= tutorial.created_at.to_date.strftime("%d.%m.%Y") %><br>
  </div>
  <div class="title">
    <%= link_to tutorial.title, tutorial_path(tutorial), class: "title-link" %>
  </div>
  <div class="tags">
    <%= raw tutorial.tags.map(&:name).map { |t| link_to "<span class='label label-primary transparent'>#{t}</span>".html_safe, tag_path(t) }.join(' ') %>
  </div>
  <div class="category">
    <%= link_to tutorial.category.name, category_path(tutorial.category) %>
  </div>
  <%= link_to tutorial_path(tutorial) do %>
    <div class="container">
      <%= cl_image_tag(tutorial.image) %>
      <div class="content">
        <p><%= tutorial.description %></p>
      </div>
    </div>
  <% end %>
</div>